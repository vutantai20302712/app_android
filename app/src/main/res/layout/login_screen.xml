<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF27F">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:fontFamily="@font/titan_one"
        android:gravity="center"
        android:text="Log In"
        android:textColor="@color/black"
        android:textSize="35sp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/titan_one"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="20dp"
        ></TextView>

    <EditText
        android:id="@+id/edmaillogin"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:background="@color/white"></EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30sp"
        android:layout_marginRight="20dp"
        android:fontFamily="@font/titan_one"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="20dp"
        ></TextView>

    <EditText
        android:id="@+id/edpasslogin"
        style="@style/Widget.Material3.TextInputEditText.OutlinedBox.Dense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_marginRight="20dp"
        android:singleLine="false"
        android:textColor="@color/black"
        android:textColorHint="@color/gray"
        android:background="@color/white"
        tools:ignore="TouchTargetSizeCheck"></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btok"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="#F70C0C"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/titan_one"
            ></Button>

        <Button
            android:id="@+id/btcancel"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:backgroundTint="#01C4EF"
            android:text="Cancel"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:fontFamily="@font/titan_one"></Button>
    </LinearLayout>

</LinearLayout>